pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Pulling latest code from GitHub...'
                git branch: 'main', url: 'https://github.com/sowtheswari22/ec2-folder-automation', credentialsId: 'github-token'
            }
        }

        stage('Deploy to /opt') {
            steps {
                echo 'Copying hello.sh to /opt and making it executable'
                sh '''
                    sudo cp ${WORKSPACE}/hello.sh /opt/hello.txt
                    sudo chmod +x /opt/hello.txt
                '''
            }
        }

        stage('Run Script') {
            steps {
                echo 'Executing the script'
                sh '/opt/hello.txt'
            }
        }
    }

    post {
        success {
            echo 'Deployment and execution completed successfully!'
        }
        failure {
            echo 'Deployment or execution failed.'
        }
    }
}

        failure {
            echo 'Deployment or execution failed.'
        }
    }
}
